<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:background="@drawable/shadoweffect"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_menuImage"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="0.3"
            android:layout_marginLeft="10dp"
            android:src="@drawable/dietexpert"
            android:scaleType="fitXY"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginRight="7dp"
                    android:id="@+id/img_type"
                    android:layout_centerVertical="true"
                    android:src="@drawable/veg"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_menu_name"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    android:text="Carrot Oatmeal Kebab"
                    android:layout_toRightOf="@+id/img_menu_veg"
                    android:gravity="center"
                    android:singleLine="true"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_price"
                android:text="Program Price in INR"
                android:layout_marginBottom="4dp"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/layout_plusminus"
                android:background="@drawable/dashboard_icon_background">
                <Button
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:background="#00ffffff"
                    android:text="-"
                    android:id="@+id/btn_minus"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="25sp"/>
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"
                    android:textColor="#ffffff"
                    android:text="0"
                    android:id="@+id/txt_value"
                    android:gravity="center"
                    android:textSize="14sp"/>
                <Button
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:background="#00ffffff"
                    android:text="+"
                    android:gravity="center"
                    android:id="@+id/btn_plus"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>