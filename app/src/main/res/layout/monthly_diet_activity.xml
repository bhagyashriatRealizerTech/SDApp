<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dietplan_border">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To Get The Personalized Diet Program\nBook Appointment with Our Experts"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:id="@+id/heading"
        android:textStyle="bold"
        android:textAlignment="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/heading"
        android:id="@+id/main_layout">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="200dp"
        android:id="@+id/layout_ayurved"
        android:layout_marginRight="10dp"
        android:background="@drawable/dashboard_icon_background"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/ayurvedic"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ayurvedacharya"
            android:textSize="18sp"
            android:layout_marginTop="7dp"
            android:textAlignment="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:id="@+id/layout_dietician"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/dashboard_icon_background"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/dietexpert"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dietitian"
            android:textSize="18sp"
            android:layout_marginTop="7dp"
            android:textAlignment="center"/>
    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        android:layout_below="@+id/main_layout"
        android:id="@+id/devider"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="30dp"
        android:background="@color/colorPrimary"></LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Standard Monthly Diet Program"
        android:textSize="18sp"
        android:id="@+id/book_pkg"
        android:textStyle="bold"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:textAlignment="center"
        android:gravity="center"
        android:background="@drawable/dinnertransbutton"
        android:layout_below="@+id/devider"/>
</RelativeLayout>