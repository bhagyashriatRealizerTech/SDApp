<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shadoweffect"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:id="@+id/img_menu"
        android:scaleType="fitXY"
        android:layout_marginBottom="10dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginRight="4dp"
                android:id="@+id/img_menu_veg"
                android:layout_centerVertical="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_menu_name"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text=""
        android:layout_toRightOf="@+id/img_menu_veg"
        android:gravity="center"
        android:singleLine="true"
        android:layout_centerHorizontal="true"
        />
        </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text=""
        android:textColor="#5C8A07"
        android:gravity="center"
        android:id="@+id/txt_menu_price"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text=""
        android:gravity="center"
        android:id="@+id/txt_menu_ratings"
        />
        <Button
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/dashboard_icon_background"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="Add"
            android:visibility="visible"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:id="@+id/btn_add"
            android:textColor="#679a08"/>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/layout_plusminus"
            android:visibility="gone"
            android:background="@drawable/dashboard_icon_background">
            <Button
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="#00ffffff"
                android:text="-"
                android:id="@+id/btn_minus"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:textSize="25sp"/>
            <TextView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"
                android:text="0"
                android:id="@+id/txt_value"
                android:gravity="center"
                android:textSize="14sp"/>
            <Button
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="#00ffffff"
                android:text="+"
                android:gravity="center"
                android:id="@+id/btn_plus"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>



</RelativeLayout>