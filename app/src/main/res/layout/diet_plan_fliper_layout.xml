<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_white_curved">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_breakfast"
        android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="120dp"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="7dp"
                android:id="@+id/img_breakfast"
                android:scaleType="fitXY"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_height="wrap_content"
                android:id="@+id/txt_breakfast"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="7dp"
                android:textSize="16sp"
                android:text=""
                android:gravity="center_vertical"
                android:textColor="#000000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:id="@+id/layout_lunch"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="120dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="7dp"
            android:id="@+id/img_lunch"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="wrap_content"
            android:id="@+id/txt_lunch"
            android:layout_marginLeft="7dp"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="#000000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_snacks"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="120dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="7dp"
            android:id="@+id/img_snacks"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="wrap_content"
            android:id="@+id/txt_snacks"
            android:layout_marginLeft="7dp"
            android:layout_marginBottom="7dp"
            android:textSize="16sp"
            android:text=""
            android:gravity="center_vertical"
            android:textColor="#000000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_dinner"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="120dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="7dp"
            android:id="@+id/img_dinner"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="wrap_content"
            android:id="@+id/txt_dinner"
            android:layout_marginLeft="7dp"
            android:layout_marginBottom="7dp"
            android:textSize="16sp"
            android:text=""
            android:gravity="center_vertical"
            android:textColor="#000000"/>
    </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>