<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:background="@drawable/shadoweffect"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_doctor"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="0.3"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:layout_marginTop="17dp"
            android:layout_marginRight="10dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_doctorname"
                android:text=""
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="3dp"
                android:textColor="#000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_doctordegree"
                android:text=""
                android:layout_marginBottom="3dp"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_doctorexperience"
                android:text=""
                android:layout_marginBottom="10dp"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_fees"
                android:text=""
                android:layout_marginBottom="3dp"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_address"
                android:text=""
                android:layout_marginBottom="3dp"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_time"
                android:text=""
                android:layout_marginBottom="3dp"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_doctordesc"
                android:text=""
                android:textSize="14sp"
                android:singleLine="true"
                android:textStyle="bold"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:visibility="gone"
                android:background="@drawable/square_background_curved"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="#ffffff"
                android:gravity="center"
                android:textAllCaps="false"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>